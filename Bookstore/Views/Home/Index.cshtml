@{
    ViewData["Title"] = "Book List";
}

@model BooksViewModel

<div class="container">
    <h1>Books:</h1>
    @foreach (var book in Model.Books)
    {
        <div class="card card-outline-primary m-1 p-1">
            <div class="bg-faded p-1">
                <h3>@book.Title</h3>
                <p>
                    <b>Author:</b> @book.Author<br />
                    <b>Publisher:</b> @book.Publisher<br />
                    <b>ISBN:</b> @book.Isbn<br />
                    <b>Classification:</b> @book.Classification<br />
                    <b>Pages:</b> @book.PageCount<br />

                    <span class="badge badge-pill badge-primary" style="float:right">
                        <large>$@book.Price</large>
                    </span>
                </p>
            </div>
        </div>

       
    }
</div>

<div page-nums="@Model.PageInfo" page-action="Index" page-classes-enabled="true" page-class="btn"
     page-class-normal="btn-outline-dark" page-class-selected="btn-primary"
     class="btn-group pull-right m-1"></div>